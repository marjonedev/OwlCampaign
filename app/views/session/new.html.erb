


<div class="py-md-5 form-container-center">

  <h1 class="h3 mb-3 font-weight-normal text-center">Login</h1>

  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> mb-2" role="alert"><%= value %></div>
  <% end %>

  <%= form_with model: @user, url: login_path, class: 'nobottommargin login-form', data: {remote: false} do |f| %>
    <div class="pb-3">
      <label for="inputUsername" class="sr-only">Username</label>
      <%= f.text_field :username, class: 'form-control required', id: "inputUsername", placeholder: 'Username', required: 'required', autofocus: '' %>
    </div>
    <div>
      <label for="inputPassword" class="sr-only">Password</label>
      <%= f.password_field :password, class: 'form-control required', id: 'inputPassword', placeholder: 'Password', required: 'required' %>
    </div>
    <!--<div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>-->
    <div class="mt-3">
      <button type="submit" class="btn btn-lg btn-primary btn-block" id="login-form-submit" name="login-form-submit" value="login">Login</button>
      <div class="text-center pt-2">
        <small><%= link_to 'Forgot Password?', forgot_password_url, :class => 'text-muted' %></small>
      </div>
      <input type="hidden" name="redirect_to" value="<%= ERB::Util.url_encode(@redirect_to) %>" />
    </div>

  <% end %>
</div>
