<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>OwlCampaign</title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="bg-light">
  <div class="d-flex flex-column flex-md-row align-items-center px-md-4 p-3 mb-3 nav-scroller bg-white shadow-sm box-shadow">
    <h5 class="my-0 mr-md-auto font-weight-normal">OwlCampaign</h5>
    <ul class="nav my-2 my-md-0 mr-md-3">
      <% if logged_in? %>
        <li class="nav-item">
          <a class="nav-link p-2 text-dark" href="/dashboard">Dashboard</a>
        </li>
        <li class="nav-item"><a class="nav-link p-2 text-dark" href="<%= campaigns_url %>">Campaign</a></li>
        <li class="nav-item"><a class="nav-link p-2 text-dark" href="<%= templates_url %>">Templates</a></li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle p-2 text-dark" href="#" id="subscribersNavLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Subscribers</a>
          <div class="dropdown-menu" aria-labelledby="subscribersNavLink">
            <a class="dropdown-item" href="<%= contacts_url %>">Contacts</a>
            <a class="dropdown-item" href="<%= emaillists_url %>">Email List</a>
          </div>
        </li>
        <li class="nav-item"><a class="nav-link p-2 text-dark" href="<%= user_url(current_user) %>">Account</a></li>
        <li class="nav-item"><a class="nav-link p-2 text-dark" href="/logout">Log Out</a></li>
      <% else %>
        <li class="nav-item"><a class="nav-link p-2 text-dark" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link p-2 text-dark" href="#">Features</a></li>
        <li class="nav-item"><a class="nav-link p-2 text-dark" href="#">Pricing</a></li>
        <li class="nav-item"><a class="nav-link p-2 text-dark" href="/login">Log In</a></li>
      <% end %>
      <% unless current_page?('/signup') or logged_in? %>
        <li class="nav-item"><a class="nav-link btn btn-outline-primary ml-2" href="/signup">Sign up</a></li>
      <% end %>
    </ul>
  </div>

  <main role="main" class="container">
    <%= yield %>
  </main>

  <footer class="pt-4 mb-0 pb-md-3 mt-5 pt-md-5 border-top bg-white">
    <div class="container">
      <div class="row">
        <div class="col-12 col-md">
          <h2>OwlCampaign</h2>
          <small class="d-block mb-3 text-muted">&copy; 2020-2021</small>
        </div>
        <div class="col-6 col-md">
          <h5>Products</h5>
          <ul class="list-unstyled text-small">
            <li><a class="text-muted" href="#">Why OwlCampaign?</a></li>
            <li><a class="text-muted" href="#">Features</a></li>
            <li><a class="text-muted" href="#">Pricing</a></li>
            <li><a class="text-muted" href="#">Security</a></li>
          </ul>
        </div>
        <div class="col-6 col-md">
          <h5>Help</h5>
          <ul class="list-unstyled text-small">
            <li><a class="text-muted" href="#">Documentation</a></li>
            <li><a class="text-muted" href="#">Guides and Tutorials</a></li>
            <li><a class="text-muted" href="#">FAQs</a></li>
            <li><a class="text-muted" href="#">Help</a></li>
          </ul>
        </div>
        <div class="col-6 col-md">
          <h5>About Us</h5>
          <ul class="list-unstyled text-small">
            <li><a class="text-muted" href="#">About</a></li>
            <li><a class="text-muted" href="#">Privacy</a></li>
            <li><a class="text-muted" href="#">Terms</a></li>
            <li><a class="text-muted" href="#">Contact</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
