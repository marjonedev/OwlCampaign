<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>OwlCampaign</title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
    <h5 class="my-0 mr-md-auto font-weight-normal">OwlCampaign</h5>
    <nav class="my-2 my-md-0 mr-md-3">
      <a class="p-2 text-dark" href="#">Features</a>
      <a class="p-2 text-dark" href="#">Pricing</a>
      <a class="p-2 text-dark" href="/login">Log In</a>
    </nav>
    <% unless current_page?('/signup') %>
      <a class="btn btn-outline-primary" href="/signup">Sign up</a>
    <% end %>
  </div>

  <div class="container">
    <%= yield %>
  </div>

  <footer class="pt-4 my-md-5 pt-md-5 border-top">
    <div class="container">
      <div class="row">
        <div class="col-12 col-md">
          <h2>OwlCampaign</h2>
          <small class="d-block mb-3 text-muted">&copy; 2020-2021</small>
        </div>
        <div class="col-6 col-md">
          <h5>Products</h5>
          <ul class="list-unstyled text-small">
            <li><a class="text-muted" href="#">Why OwlCampaign?</a></li>
            <li><a class="text-muted" href="#">Features</a></li>
            <li><a class="text-muted" href="#">Pricing</a></li>
            <li><a class="text-muted" href="#">Security</a></li>
          </ul>
        </div>
        <div class="col-6 col-md">
          <h5>Help</h5>
          <ul class="list-unstyled text-small">
            <li><a class="text-muted" href="#">Documentation</a></li>
            <li><a class="text-muted" href="#">Guides and Tutorials</a></li>
            <li><a class="text-muted" href="#">FAQs</a></li>
            <li><a class="text-muted" href="#">Help</a></li>
          </ul>
        </div>
        <div class="col-6 col-md">
          <h5>About Us</h5>
          <ul class="list-unstyled text-small">
            <li><a class="text-muted" href="#">About</a></li>
            <li><a class="text-muted" href="#">Privacy</a></li>
            <li><a class="text-muted" href="#">Terms</a></li>
            <li><a class="text-muted" href="#">Contact</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
