<div class="mt-5 my-3 p-3 bg-white rounded shadow-sm">
  <h5 class="border-bottom border-gray pb-2 mb-0">Account Detail</h5>
  <div class="pt-3">
    <%= form_with(model: user, local: true) do |form| %>
      <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group row">
        <%= form.label :username, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= form.text_field :username, class: "form-control", readonly: "readonly" %>
        </div>
      </div>
      <div class="form-group row">
        <%= form.label :email_address, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= form.text_field :email_address, class: "form-control", type: "email", required: 'required' %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">New Password</label>
        <div class="col-sm-10">
          <%= form.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary pl-4 pr-4 mr-2"> Save </button> <%= link_to "Cancel", :back, :class => 'btn btn-light' %>
        </div>
      </div>
    <% end %>
  </div>
  <small class="d-block text-right mt-3">
    <a href="<%= edit_user_url(current_user) %>"><i class="fa fa-edit"></i> Edit</a>
  </small>
</div>


